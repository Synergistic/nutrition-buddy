<NutritionCalc>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.03)
        Label:
            text: 'Height'
            font_size: '20sp'
        TextInput:
            text: root.height_value
            on_text: root.height_value = self.text
            size_hint_y: None
            input_type: 'number'
            pos_hint: {'center_y': 0.5}
            multiline: False
            font_size: '20sp'
            height: sp(32)
        Spinner:
            text: root.height_unit
            on_text: root.height_unit = self.text
            values: ( 'cm', 'in' )
            font_size: '20sp'
            height: sp(32)
            size_hint_y: None
            pos_hint: {'center_y': 0.5}
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.03)
        
        Label:
            text: 'Weight'
            font_size: '20sp'
        TextInput:
            text: root.weight_value
            on_text: root.weight_value = self.text
            size_hint_y: None
            input_type: 'number'
            pos_hint: {'center_y': 0.5}
            multiline: False
            font_size: '20sp'
            height: sp(32)
        Spinner:
            text: root.weight_unit
            on_text: root.weight_unit = self.text
            values: ( 'kg', 'lbs' ) 
            font_size: '20sp'
            height: sp(32)
            size_hint_y: None
            pos_hint: {'center_y': 0.5}
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.03)

        Label:
            text: 'Age'
            font_size: '20sp'
        TextInput:
            text: root.age
            on_text: root.age = self.text
            input_type: 'number'
            size_hint_y: None
            pos_hint: {'center_y': 0.5}
            multiline: False
            font_size: '20sp'
            height: sp(32)
        Label:

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.03)
            
        Label:
            text: 'Sex'
            font_size: '20sp'
        Spinner:
            text: root.sex
            values: ( 'Male', 'Female' )
            on_text: root.sex = self.text
            font_size: '20sp'
            height: sp(32)
            size_hint_y: None
            pos_hint: {'center_y': 0.5}
        Label:
        
<MifflinCalc>:
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.03)
        Label:
            size_hint: (0.5, None)
        Spinner:
            text: root.stress_factor
            on_text: root.stress_factor = self.text
            values: root.stress_factors
            font_size: '16sp'
            height: sp(32)
            size_hint: 1, None
            pos_hint: {'center_y': 0.5}
        Label:
        Spinner:
            text: root.activity_factor
            on_text: root.activity_factor = self.text
            values: root.activity_factors
            font_size: '16sp'
            height: sp(32)
            size_hint: 1, None
            pos_hint: {'center_y': 0.5}
        Label:
            size_hint: (0.5, None)
    Label:
        size_hint: (1, 0.01)
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.06)
        Label:
            size_hint: (0.05, 1)
                    
        Button:
            text: 'Calculate'
            font_size: '24sp'
            on_release: root.run_calculator()
        Button:
            text: 'Reset'
            font_size: '24sp'
            on_release: root.reset_fields()
        Label:
            size_hint: (0.05, 1)
    Label:
        size_hint: (1, 0.01)
        
