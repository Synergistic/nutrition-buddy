<NutritionCalc>:
	orientation: 'vertical'
	Image:
		source: 'logo.png'
		size_hint: (1, 0.1)
	Label:
		text: root.title_text
		font_size: '28sp'
		size_hint: (1, 0.1)
		padding: (0, 0)
		border: 0
		
	BoxLayout:
		orientation: 'horizontal'
		size_hint: (1, 0.04)
		Label:
			text: 'Height'
			font_size: '20sp'
		TextInput:
			input_type: 'number'
			text: root.user_height
			multiline: False
			font_size: '24sp'
			on_text: root.user_height = self.text
		Spinner:
			text: root.height_unit
			on_text: root.height_unit = self.text
			values: ( 'cm', 'in' )
			font_size: '20sp'		
			
	BoxLayout:
		orientation: 'horizontal'
		size_hint: (1, 0.04)
		
		Label:
			text: 'Weight'
			font_size: '20sp'
		TextInput:
			text: root.user_weight
			multiline: False
			font_size: '24sp'
			input_type: 'number'
			on_text: root.user_weight = self.text
		Spinner:
			text: root.weight_unit
			on_text: root.weight_unit = self.text
			values: ( 'kg', 'lbs' ) 
			font_size: '20sp'		
			
	BoxLayout:
		orientation: 'horizontal'
		size_hint: (1, 0.04)

		Label:
			text: 'Age'
			font_size: '20sp'
		TextInput:
			text: root.user_age
			input_type: 'number'
			multiline: False
			font_size: '24sp'
			on_text: root.user_age = self.text
		Label:
  
	BoxLayout:
		orientation: 'horizontal'
		size_hint: (1, 0.04)
		
		Label:
			text: 'Sex'
			font_size: '20sp'
		Spinner:
			text: root.user_sex
			values: ( 'Male', 'Female' )
			on_text: root.user_sex = self.text
			font_size: '20sp'
		Label:

<MifflinCalc>:
	BoxLayout:
		orientation: 'horizontal'
		size_hint: (1, 0.04)
		Label:
			text: 'Factor'
			font_size: '20sp'
		TextInput:
			input_type: 'number'
			text: root.stress_factor
			multiline: False
			font_size: '24sp'
			on_text: root.stress_factor = self.text
		Label:
	Label:
		size_hint: (1, 0.01)
	BoxLayout:
		orientation: 'horizontal'
		size_hint: (1, 0.1)
		Label:
			size_hint: (0.03, 1)
			
		Button:
			text: 'Calculate'
			font_size: '28sp'
			on_release: root.run_calculator()
		Button:
			text: 'Reset'
			font_size: '28sp'
			on_release: root.reset_fields()
		Label:
			size_hint: (0.03, 1)
	Label:
		size_hint: (1, 0.01)
				
<PennCalc>:
	BoxLayout:
		orientation: 'horizontal'
		size_hint: (1, 0.2)
			
		Button:
			text: 'Calculate'
			font_size: '28sp'
			on_release: root.run_calculator()
		Button:
			text: 'Reset'
			font_size: '28sp'
			on_release: root.reset_fields()
            
            
<Widgets>:
    tab_pos: 'bottom_mid'
    do_default_tab: False
    TabbedPanelItem:
        text: 'Welcome'
        RstDocument:
            source: 'welcome.rst'

    TabbedPanelItem:
        id: Mifflin
        text: 'Mifflin'
		MifflinCalc:

	TabbedPanelItem:
        id: pennst
        text: 'PennSt'
		PennCalc: