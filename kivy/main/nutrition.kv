<Widgets>
    orientation: 'vertical'
  

	BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.3)
		
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.1)
		
        Label:
            text: 'Height'
			font_size: 24
        TextInput:
            text: root.user_height
            multiline: False
			font_size: 24
			on_text: root.user_height = self.text
        Spinner:
            text: root.height_unit
			on_text: root.height_unit = self.text
            values: ( 'cm', 'in' ) 
			font_size: 24		
			
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.1)
		
        Label:
            text: 'Weight'
			font_size: 24
        TextInput:
            text: root.user_weight
            multiline: False
			font_size: 24
			on_text: root.user_weight = self.text
        Spinner:
            text: root.weight_unit
			on_text: root.weight_unit = self.text
            values: ( 'kg', 'lbs' ) 
			font_size: 24			
			
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.1)

        Label:
            text: 'Age'
			font_size: 24
        TextInput:
            text: root.user_age
            multiline: False
			font_size: 24
			on_text: root.user_age = self.text
		Label:
  
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.1)
		
        Label:
            text: 'Sex'
			font_size: 24
        Spinner:
            text: root.user_sex
	        values: ( 'Male', 'Female' )
			on_text: root.user_sex = self.text
			font_size: 24
		Label:
		
    BoxLayout:
	    size_hint: (1, 0.1)
		
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.2)
		
        Button:
            text: 'Calculate'
			font_size: 24
            on_release: root.run_calculator()
        Button:
            text: 'Reset'
			font_size: 24
            on_release: root.reset_fields()
			
	BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.2)